.pic{
  display: flex;
  justify-content: center;
}
.picbox{
  width: 97%;
  height: 300rpx;
  border-radius:25rpx;
  overflow: hidden;
  position: relative;
}
.img{
  width: 100%;
  height: 300rpx;
 
}
.text{
  position: absolute;
  bottom:0rpx;
  right: 0rpx;
  color: white;
  padding: 10rpx;
  font-size: 24rpx;
  border-top-left-radius:25rpx;
}
.scrollbox{
  border-bottom:1px solid #EEE ;
}
.arrbox{
  display: flex;
}
.arr{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.bg{
  width: 100rpx;
  height: 100rpx;
  background-color: rgb(197, 163, 157);
  border-radius:50%;
  overflow: hidden;
  margin: 20rpx 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.box1{
  width:60rpx;
  height:60rpx;
}
.box2{
  width: 80rpx;
  height: 80rpx;
}
.title{
  font-size: 26rpx;
  margin-bottom: 20rpx;
}