.img {
  animation: img 3s infinite;
}
@keyframes img{
  0%{
    border: 1px solid rgb(228, 215, 215);
    padding: 10rpx;
    /* border-radius: 50%; */
  }
  10%{
    border: 1px solid rgb(228, 215, 215);
    padding: 20rpx;
  }
  20%{
    border: 1px solid rgb(228, 215, 215);
    padding: 30rpx;
  }
  30%{
    border: 1px solid rgb(228, 215, 215);
    padding: 40rpx;
  }
  40%{
    border: 1px solid rgb(228, 215, 215);
    padding: 50rpx;
  }
  50%{
    border: 1px solid rgb(228, 215, 215);
    padding: 60rpx;
  }
  60%{
    border: 1px solid rgb(228, 215, 215);
    padding: 50rpx;
  }
  70%{
    border: 1px solid rgb(228, 215, 215);
    padding: 40rpx;
  }
  80%{
    border: 1px solid rgb(228, 215, 215);
    padding: 30rpx;
  }
  90%{
    border: 1px solid rgb(228, 215, 215);
    padding: 20rpx;
  }
  100%{
    border: 1px solid rgb(228, 215, 215);
    padding: 10rpx;
  }
}
